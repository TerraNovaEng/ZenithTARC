<script>
    const form = document.getElementById('tarc-form');
    const msgBox = document.getElementById('form-messages');
    const submitBtn = document.getElementById('submit-btn');

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // UI Feedback
        submitBtn.disabled = true;
        msgBox.style.display = 'block';
        msgBox.style.backgroundColor = '#e7f3ff';
        msgBox.style.color = '#0056b3';
        msgBox.innerHTML = 'üöÄ Sending data to TerraNova Engineering Lab...';

        const data = new FormData(form);
        const url = form.action;

        // Use a simpler approach for the fetch to avoid catch block sensitivity
        fetch(url, {
            method: 'POST',
            body: data,
            mode: 'no-cors'
        })
        .then(function() {
            // Because we use 'no-cors', the promise almost always resolves 
            // even if the server has a redirect issue. 
            // This is the safest way to trigger the success UI for Google Scripts.
            msgBox.style.backgroundColor = '#d4edda';
            msgBox.style.color = '#155724';
            msgBox.innerHTML = '‚úÖ SUCCESS: Flight data and notes saved to the cloud.';
            form.reset();
            submitBtn.disabled = false;
            msgBox.scrollIntoView({ behavior: 'smooth' });
        })
        .catch(function(error) {
            // This only triggers if the network is literally down or the URL is malformed
            console.error('Network/URL Error:', error);
            msgBox.style.backgroundColor = '#f8d7da';
            msgBox.style.color = '#721c24';
            msgBox.innerHTML = '‚ùå ERROR: Critical failure. Check your internet connection.';
            submitBtn.disabled = false;
        });
    });
</script>
