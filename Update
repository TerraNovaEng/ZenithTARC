<script>
    const form = document.getElementById('tarc-form');
    const msgBox = document.getElementById('form-messages');

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        msgBox.style.display = 'block';
        msgBox.style.backgroundColor = '#e7f3ff';
        msgBox.style.color = '#0056b3';
        msgBox.innerHTML = 'Establishing uplink with TerraNova Lab...';

        const formData = new FormData(form);
        const params = new URLSearchParams();
        for (const pair of formData) { params.append(pair[0], pair[1]); }
        
        fetch(form.action, { method: 'POST', body: params, mode: 'no-cors' })
        .then(() => {
            msgBox.style.backgroundColor = '#d4edda';
            msgBox.style.color = '#155724';
            msgBox.innerHTML = '‚úÖ SUCCESS: Flight Data filed in Mission Control.';
            form.reset();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        })
        .catch(err => {
            msgBox.style.backgroundColor = '#f8d7da';
            msgBox.style.color = '#721c24';
            msgBox.innerHTML = '‚ùå UPLINK ERROR: Please check connection.';
        });
    });
</script>
